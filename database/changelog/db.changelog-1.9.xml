<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet author="stein.welberg@everett.nl" id="1.9">
        <dropTable tableName="virtual_organisation_stem" />
    </changeSet>
    <changeSet id="1312790463" author="patrick@ibuildings.nl">
        <dropTable tableName="virtual_organisation_attribute"/>
        <createTable tableName="virtual_organisation_attribute">
            <column name="id" type="INT(11)" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="vo_id" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="sp_entity_id" type="VARCHAR(1024)">
                <constraints nullable="false" />
            </column>
            <column name="user_id_pattern" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="attribute_name_saml" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="attribute_name_opensocial" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="attribute_value" type="VARCHAR(1024)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addUniqueConstraint tableName="virtual_organisation_attribute" columnNames="vo_id (200),sp_entity_id (200),user_id_pattern (200),attribute_name_saml (200),attribute_name_opensocial (200)"/>
    </changeSet>
</databaseChangeLog>
